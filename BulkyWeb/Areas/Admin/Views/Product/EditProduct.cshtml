@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Product
            </h2>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0 text-primary"></label>
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0  text-primary"></label>
            <input class="form-control" asp-for="Author" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0  text-primary"></label>
            <textarea class="form-control" asp-for="Description" ></textarea>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category" class="p-0  text-primary"></label>
            <input class="form-control" asp-for="Category" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0  text-primary"></label>
            <input class="form-control" asp-for="ISBN" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0  text-primary"></label>
            <input class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-0  text-primary"></label>
            <input class="form-control" asp-for="Price50" />
            <span asp-validation-for="Price50" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-0  text-primary"></label>
            <input class="form-control" asp-for="Price100" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control"> Update </button>

            </div>
            <div class="col-6">
                <a asp-controller="product" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-list"></i>
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}